alias stop="sudo shutdown -s now%"
alias close="sudo shutdown -h now%"

# special characters print
alias tilde="echo \"tilde = ~\""
alias backtick="echo \"backtick = \\\`\""

# `cd` shortcuts
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias desktop="cd ~/Desktop"
alias downloads="cd ~/Downloads"
alias dw="cd ~/Downloads"
alias scripts_and_dotfiles="cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/scripts_and_dotfiles/"

# Recursively delete all `.DS_Store` files
alias ds_store_delete="find . -type f -name '*.DS_Store' -ls -delete"

# delete all `.mypy_cache` directories
alias mypy_cache_delete="find . -path '*.mypy_cache/*' -delete && find . -type d -name '*.mypy_cache' -empty -delete -ls"

# Print each $PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'

# shortcut to open python3
alias py="python3"

# Simulate timer
alias timer='echo "Timer started. Stop it using Ctrl-D." && date && time cat && date'
